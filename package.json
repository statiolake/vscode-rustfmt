{
  "name": "vscode-rustfmt",
  "displayName": "vscode-rustfmt",
  "description": "document formatter for single rust file",
  "publisher": "statiolake",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/statiolake/vscode-rustfmt/"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Rustfmt",
        "properties": {
          "rustfmt.path": {
            "type": "string",
            "default": "rustfmt",
            "description": "Path to rustfmt executable"
          },
          "rustfmt.edition": {
            "type": "string",
            "default": "2021",
            "enum": [
              "2015",
              "2018",
              "2021",
              "2024"
            ],
            "description": "Edition of Rust"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
